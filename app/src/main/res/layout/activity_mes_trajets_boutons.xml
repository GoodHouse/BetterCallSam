<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="groupe22.bettercallsam.MesTrajetsBoutons">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="94dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/textMesTrajets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:text="Mes trajets"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24dp" />

    <Button
        android:id="@+id/boutonConducteur"
        style="@style/Widget.AppCompat.ButtonBar"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="@color/button_material_light"
        android:onClick="clickConducteur"
        android:text="Voir les trajets où je suis conducteur" />

    <Button
        android:id="@+id/boutonPassager"
        style="@style/Widget.AppCompat.ButtonBar"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_below="@+id/boutonConducteur"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="@color/button_material_light"
        android:onClick="clickPassager"
        android:text="Voir les trajets où je suis passager" />

</RelativeLayout>
