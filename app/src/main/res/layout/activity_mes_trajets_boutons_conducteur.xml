<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="94dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon" />
    <TextView
        android:id="@+id/textMesTrajets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:text="Mes trajets"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voir les trajets où je suis conducteur"
        android:id="@+id/boutonConducteur"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="75dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voir les trajets où je suis passager"
        android:id="@+id/boutonPassager"
        android:layout_below="@+id/boutonConducteur"
        android:textSize="20dp"
        android:layout_marginTop="75dp"
        android:layout_alignEnd="@+id/boutonConducteur"
        android:layout_alignStart="@+id/boutonConducteur" />

</RelativeLayout>